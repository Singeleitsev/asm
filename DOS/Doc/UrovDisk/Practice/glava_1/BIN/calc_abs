.code
calc_abs	proc
;определим знак операнда
	mov	si,cx
	dec	si
	test	byte ptr [bx][si],80h	;провер€ем знак операнда
	jz	@@exit	;число положительное
	call	calc_complement
@@exit:	ret
calc_abs	endp
